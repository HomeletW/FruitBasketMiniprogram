.list-card {
  padding: 8rpx 28rpx;
}

.order {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f1e3dd;
}

.order:last-child {
  border-bottom: none;
}

.order-title {
  font-size: 26rpx;
  font-weight: 600;
}

.order-meta {
  color: #7a6f6a;
  margin: 8rpx 0 14rpx;
  font-size: 22rpx;
}

.actions button {
  margin-right: 12rpx;
  background: #f6e2dc;
  color: #8b5c4b;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.content-card {
  padding: 24rpx;
  background: linear-gradient(135deg, #fffaf7, #fef3ef);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.textarea {
  min-height: 220rpx;
}
