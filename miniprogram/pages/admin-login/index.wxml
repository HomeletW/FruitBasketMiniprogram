<view class="page">
  <view class="section fade-in">
    <view class="section-head">
      <text class="section-title">管理员登录</text>
      <text class="section-subtitle">仅限内部人员操作</text>
    </view>
    <view class="card form-card">
      <input class="input" placeholder="请输入账号" data-field="username" bindinput="onInput" />
      <input class="input" type="password" placeholder="请输入密码" data-field="password" bindinput="onInput" />
      <view class="button-primary" bindtap="login">登录</view>
    </view>
  </view>
</view>
