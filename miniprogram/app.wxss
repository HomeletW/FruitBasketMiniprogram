page {
  background-color: #f7f7f7;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Helvetica Neue", Arial;
}

.container {
  padding: 24rpx;
}

.section {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
}

.button-primary {
  background-color: #27ae60;
  color: #fff;
  border-radius: 8rpx;
  padding: 20rpx 0;
  text-align: center;
}
