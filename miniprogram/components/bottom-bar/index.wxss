.bottom-bar {
  position: fixed;
  left: 24rpx;
  right: 24rpx;
  bottom: 24rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  padding: 16rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 16rpx 32rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(16rpx);
  z-index: 50;
}

.bottom-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 8rpx;
  border-radius: 24rpx;
  background: #f6f1ee;
  color: #9b837c;
  font-size: 22rpx;
  gap: 6rpx;
}

.bottom-item.is-active {
  background: linear-gradient(135deg, #f6c9b8, #f1a59a);
  color: #3d2b28;
  font-weight: 600;
  box-shadow: 0 10rpx 20rpx rgba(241, 165, 154, 0.35);
}

.bottom-label {
  font-size: 24rpx;
}

.bottom-desc {
  font-size: 18rpx;
  opacity: 0.8;
}
